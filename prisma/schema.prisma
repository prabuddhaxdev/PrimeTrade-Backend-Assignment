generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(USER)
  teamId    String?
  team      Team?    @relation(fields: [teamId], references: [id], onDelete: SetNull)

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Indexes
  @@index([email])
  @@index([role])
  @@index([teamId])

  @@map("users")
}


model Team {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  code        String @unique
  members     User[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("teams")
}

enum Role {
    ADMIN
    MANAGER
    USER
    GUEST
}